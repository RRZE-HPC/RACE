set(RACE_INCLUDE_DIRS @CMAKE_INSTALL_PREFIX@/include @HWLOC_INCLUDE_DIR@)

if (@BUILD_SHARED_LIBS@ STREQUAL "ON")
    set(RACE_LIBRARIES @CMAKE_INSTALL_PREFIX@/lib/RACE/libRACE.so -lpthread)
else()
    set(RACE_LIBRARIES @CMAKE_INSTALL_PREFIX@/lib/RACE/libRACE.a -lpthread)
endif()
set(RACE_LIBDIR @CMAKE_INSTALL_PREFIX@/lib)

set(RACE_C_FLAGS "@CMAKE_C_FLAGS@")
set(RACE_CXX_FLAGS "@CMAKE_CXX_FLAGS@")

set(RACE_CC @CC@)
set(RACE_CXX @CXX@)

set(RACE_VERSION @RACE_VERSION@)

# set default paths for libraries
set(HWLOC_LIBRARIES @HWLOC_LIBRARIES@ CACHE STRING "hwloc libraries (required by @CMAKE_PROJECT_NAME@)")
set(RACE_LIBRARIES ${RACE_LIBRARIES} ${HWLOC_LIBRARIES})

