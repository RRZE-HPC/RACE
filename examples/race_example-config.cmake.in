set(RACE_EXAMPLE_INCLUDE_DIRS @CMAKE_INSTALL_PREFIX@/include;@RACE_INCLUDE_DIRS@)

if (@BUILD_SHARED_LIBS@ STREQUAL "ON")
    set(RACE_EXAMPLE_LIBRARIES @CMAKE_INSTALL_PREFIX@/lib/RACE_example/libRACE_example.so -lpthread)
else()
    set(RACE_EXAMPLE_LIBRARIES @CMAKE_INSTALL_PREFIX@/lib/RACE_example/libRACE_example.a -lpthread)
endif()
set(RACE_EXAMPLE_LIBDIR @CMAKE_INSTALL_PREFIX@/lib)

set(RACE_EXAMPLE_C_FLAGS "${RACE_C_FLAGS}")
set(RACE_EXAMPLE_CXX_FLAGS "${RACE_CXX_FLAGS} -std=c++11")

set(RACE_EXAMPLE_CC @CC@)
set(RACE_EXAMPLE_CXX @CXX@)


# set default paths for libraries
set(HWLOC_LIBRARIES @HWLOC_LIBRARIES@ CACHE STRING "hwloc libraries (required by @CMAKE_PROJECT_NAME@)")
set(RACE_EXAMPLE_LIBRARIES ${RACE_EXAMPLE_LIBRARIES};@RACE_LIBRARIES@)

if (@RACE_EXAMPLE_HAVE_OPENMP@)
    set(RACE_EXAMPLE_C_FLAGS "${RACE_C_FLAGS} @OpenMP_C_FLAGS@")
    set(RACE_EXAMPLE_CXX_FLAGS "${RACE_CXX_FLAGS} @OpenMP_CXX_FLAGS@")
endif()
